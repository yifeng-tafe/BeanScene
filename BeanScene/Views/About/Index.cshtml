    <div class="banner">
        <div class="logoContainer">
            <img class="logo" src="~/images/Logo_landscape.png" />
        </div>
        <div class="menuContainer">
            <div class="btnMenuContainer">
                @Html.Partial("_BtnMenu")
            </div>
            <div class="btnReservContainer">
                @Html.Partial("_BtnReserv")
            </div>
            <div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
