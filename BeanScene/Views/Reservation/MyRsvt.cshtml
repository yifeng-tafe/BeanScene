@model IEnumerable<BeanScene.Models.Reservation>

@{
    ViewData["Title"] = "MyRsvt";
    Layout = "~/Views/Shared/_MgmtLayout.cshtml";
}

<h1>Reservation History</h1>
<p>
    <a type="button" class="btn btn-primary btn-xl" href="@Url.Action("MyCreate")"><span>Create New</span></a>
</p>
<div  style="flex-wrap:wrap;overflow:auto;height:60vh">
<table class="table">
    <thead>
        <tr>
            <th>
                Request Time
            </th>
            <th>
                Guest Name
            </th>
            <th>
                Reserving Date
            </th>
            <th>
                Reserving Time
            </th>
            <th>
                Guests
            </th>
            <th>
                Status
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationMadeTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName) 
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationDate)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReserveTime.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfGuest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            
            <td>
                        @if (item.Status == Reservation.StatusEnum.Requested)
                        {
                            <a type="button" class="btn btn-danger btn-xl" asp-action="CancelMyRsvt" asp-route-id="@item.Id"><span>Cancel</span></a>
                        }
            </td>
            
        </tr>
}
    </tbody>
</table>
</div>