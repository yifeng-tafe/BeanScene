@model IEnumerable<BeanScene.Models.Food>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MgmtLayout.cshtml";
}


<style>

    .contentContainer {
        display: flex;
        flex-direction: column;
    }

    .titleContainer {
        vertical-align: middle;
        line-height: 32px;
        height: 32px;
        display: flex;
        justify-content: start;
        margin-bottom: 30px;
    }

    .tableContainer {
        height: 100%;
    }

    #table-wrapper {
        position: relative;
    }

    #table-scroll {
        height: 60vh;
        overflow: scroll;
        margin-top: 20px;
    }

    #table-wrapper table {
        width: 100%;
    }

        #table-wrapper table * {
            color: black;
        }

        #table-wrapper table thead th .text {
            position: absolute;
            top: -20px;
            z-index: 2;
            height: 20px;
            width: 35%;
            border: 1px solid red;
        }
</style>

<html>
<body bgcolor="white">
    <div class="contentContainer">

        <div class="titleContainer">
            <Text style="margin-top:0px;font-size:28px;font-weight:bold;padding-right:10px">Menu</Text>
            <div style="vertical-align:middle;height:32px;line-height:32px">
                <a type="button" style="border-radius:40px;height:24px;width:64px;line-height:24px;vertical-align:middle" href="@Url.Action("Create")">
                    @*create "Create" in FoodController*@
                    <span class="glyphicon glyphicon-plus"></span>
                    <span>New</span>
                </a>
            </div>
        </div>


        <div style="display:flex;flex-direction:row;width:100%;flex-wrap:wrap;overflow:auto;height:70vh;">

            @foreach (var item in Model)
            {

                <div style="width:200px;margin:20px;margin-left:0px">
                    <div>
                        <img width="200" height="150" src=@item.ImageURL>
                    </div>
                    <div style="font-size:16px;font-weight:bold;padding-top:10px;margin-bottom:0px;">
                        @Html.DisplayFor(modelItem => item.Name)
                    </div>
                    <div>
                        <Text>Description: <br></Text>
                        @Html.DisplayFor(modelItem => item.Description)
                    </div>
                    <div>
                        <Text>Price:</Text>
                        @Html.DisplayFor(modelItem => item.Price)
                    </div>
                    <div>
                        <Text>Category:</Text>
                        @Html.DisplayFor(modelItem => item.Catagory.Name)
                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
