@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MgmtLayout.cshtml";
}


<style>

.contentContainer {
    display:flex;
    flex-direction:column;
    
    
}

.titleContainer{
    vertical-align:middle;
    line-height:32px;
    height:32px;
    display:flex;
    justify-content:start;
    margin-bottom:30px;
}

.tableContainer{
    height:100%;
   
    
}

#table-wrapper {
  position:relative;
  
}
#table-scroll {
  height:60vh;
  overflow:scroll;  
  margin-top:20px;
}
#table-wrapper table {
  width:100%;

}
#table-wrapper table * {
  
  color:black;
}
#table-wrapper table thead th .text {
  position:absolute;   
  top:-20px;
  z-index:2;
  height:20px;
  width:35%;
  border:1px solid red;
}
</style>

