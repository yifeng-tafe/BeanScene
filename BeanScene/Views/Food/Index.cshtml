<body bgcolor="white" >
    <div class="contentContainer">
        
        <div class="titleContainer">
            <Text style="margin-top:0px;font-size:28px;font-weight:bold;padding-right:10px">Menu</Text>
            <div style="vertical-align:middle;height:32px;line-height:32px">
            <a type="button" style="border-radius:40px;height:24px;width:64px;line-height:24px;vertical-align:middle" href="@Url.Action("Create")">
                @*create "Create" in FoodController*@
                <span class="glyphicon glyphicon-plus"></span>
                <span>New</span>
            </a>
            </div>
        </div>
        
        
        <div style="display:flex;flex-direction:row;width:100%;flex-wrap:wrap;overflow:auto;height:70vh;" >
           
            @foreach (var item in Model)
                        {
               
                <div style="width:200px;margin:20px;margin-left:0px">
                                <div>
                                    <img width="200" height="150" src=@item.ImageURL>
                                </div>
                                <div>
                                    @Html.DisplayFor(modelItem => item.Name)
