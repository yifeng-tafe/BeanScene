<section style="height:100%;padding:0;margin:0">
    <div class="container" style="padding:0;margin:0;height:100%;width:100%;display:flex;flex-direction:row;">
        <div class="imageContainer" style="width:420px;height:100vh;">
            <img src="~/images/LoginImage.jpg" style="height:100%;width:100%;object-fit:cover" />
        </div>
        <div class="loginContainer" style="width:600px;height:100vh;padding:100px;overflow:hidden">

            
                    <div style="width:100%;height:100%;display:flex;flex-direction:column;justify-content:center;">
                        <form id="account" method="post">
                            <img src="~/images/Logo_black.png" height="80px" style="margin-bottom:50px" />
                            
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating" style="margin-bottom:50px;position:relative">
                                <i class="fa fa-envelope icon" style="position:absolute;right:12px;top: 20px;color: gray;"></i>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email" class="form-label"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating" style="margin-bottom:10px;position:relative">
                                <i class="fa fa-lock icon" style="position:absolute;right:14px;top: 20px;color: gray;"></i>
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                <label asp-for="Input.Password" class="form-label"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div style="display:flex;flex-direction:row;justify-content:space-between;height:min-content;height:50px;margin-top:50px;">
                                <div class="checkbox" style="margin-bottom:50px;">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                                <div style="height:100%">
                                    <button id="login-submit" type="submit" class="btn btn-lg btn-primary loginBtn" href=@Url.Action("AllFood", "Home")>Log in</button>
                                </div>
                            </div>
                            <div style="display:flex;flex-direction:row;justify-content:space-between;margin-top:20px;">
                                <div>
                                    <a id="forgot-password" asp-area="Identity" asp-page="/Account/ForgetPassword" style="text-decoration:none;color:grey;font-size:12px">Forgot your password?</a>
                                </div>
                                <div>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="text-decoration:none;color:grey;font-size:12px">Register as a new user</a>
                                </div>
                                
                            </div>
                        </form>
                    </div>
                
