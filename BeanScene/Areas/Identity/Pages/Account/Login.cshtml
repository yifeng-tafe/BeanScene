        width: 100%;
        height: 100%
    }

    .container {
        width: 100%;
        height: 100%;
        display: row;
        padding: 0;
        margin: 0;
    }

    .imageContainer {
        width: 40%;
        height: 100%;
    }

    .loginContainer {
        width: 60%;
        height: 100%
    }

form{
    width:100%;
    height:min-content;
    padding:0px;
    margin:0px;
}

.loginBtn{
    width:120px;
}
